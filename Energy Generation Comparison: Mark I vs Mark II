import matplotlib.pyplot as plt

# Days after April 1st
days = list(range(1, 61))  # Assuming we're looking at up to 60 days

# Energy generated by Mark I and Mark II
energy_mark_i = [1 * day for day in days]
energy_mark_ii = [4 * (day - 30) if day > 30 else 0 for day in days]

# Plotting
plt.plot(days, energy_mark_i, label="Mark I (1 kj/day)")
plt.plot(days, energy_mark_ii, label="Mark II (4 kj/day)")

plt.xlabel("Days after April 1st")
plt.ylabel("Total Energy Generated (kj)")
plt.title("Energy Generation Comparison: Mark I vs Mark II")
plt.legend()
plt.grid(True)
plt.show()
